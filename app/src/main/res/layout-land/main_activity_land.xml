<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="2sp"
        android:layout_marginEnd="2sp"
        android:layout_marginBottom="2sp"
        app:layout_constraintHeight_percent="0.3"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp">

        <TextView
            android:id="@+id/operation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text=""
            android:textSize="20dp" />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/outline"
            android:outlineProvider="bounds"
            android:text=""
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.05"
        android:layout_marginStart="2sp"
        android:layout_marginEnd="2sp"
        android:layout_marginBottom="2sp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button_0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:backgroundTint="@color/white"
            android:foreground="@drawable/button_border"
            android:text="0"
            android:textColor="@color/btn_orange"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button_point"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:backgroundTint="@color/white"
            android:foreground="@drawable/button_border"
            android:text="."
            android:textColor="@color/btn_orange"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:backgroundTint="@color/btn_orange"
            android:foreground="@drawable/button_border2"
            android:text="="
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.05"
        android:layout_marginStart="2sp"
        android:layout_marginEnd="2sp"
        android:layout_marginBottom="2sp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:backgroundTint="@color/white"
            android:foreground="@drawable/button_border"
            android:text="@string/back"
            android:textColor="@color/btn_orange"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button_plusminus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:backgroundTint="@color/white"
            android:foreground="@drawable/button_border"
            android:text="@string/plusminus"
            android:textColor="@color/btn_orange"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button_c"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:backgroundTint="@color/btn_orange"
            android:foreground="@drawable/button_border2"
            android:text="@string/clear"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="2sp"
        android:layout_marginEnd="2sp"
        android:layout_marginBottom="2sp"
        app:layout_constraintHeight_percent="0.05"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:backgroundTint="@color/white"
            android:foreground="@drawable/button_border"
            android:text="1"
            android:textColor="@color/btn_orange"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:backgroundTint="@color/white"
            android:foreground="@drawable/button_border"
            android:text="2"
            android:textColor="@color/btn_orange"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:backgroundTint="@color/white"
            android:foreground="@drawable/button_border"
            android:text="3"
            android:textColor="@color/btn_orange"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button_sqrt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:backgroundTint="@color/white"
            android:foreground="@drawable/button_border"
            android:text="√"
            android:textColor="@color/btn_orange"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button_invert"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:backgroundTint="@color/white"
            android:foreground="@drawable/button_border"
            android:text="@string/invert"
            android:textColor="@color/btn_orange"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="2sp"
        android:layout_marginEnd="2sp"
        android:layout_marginBottom="2sp"
        app:layout_constraintHeight_percent="0.05"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:backgroundTint="@color/white"
            android:foreground="@drawable/button_border"
            android:text="4"
            android:textColor="@color/btn_orange"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="8sp"
            android:layout_marginStart="8sp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/white"
            android:foreground="@drawable/button_border"
            android:text="5"
            android:textColor="@color/btn_orange"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button_6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:backgroundTint="@color/white"
            android:foreground="@drawable/button_border"
            android:text="6"
            android:textColor="@color/btn_orange"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button_plus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:backgroundTint="@color/white"
            android:foreground="@drawable/button_border"
            android:text="+"
            android:textColor="@color/btn_orange"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button_multiply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:backgroundTint="@color/white"
            android:foreground="@drawable/button_border"
            android:text="×"
            android:textColor="@color/btn_orange"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="2sp"
        android:layout_marginEnd="2sp"
        android:layout_marginBottom="2sp"
        app:layout_constraintHeight_percent="0.05"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button_7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:backgroundTint="@color/white"
            android:foreground="@drawable/button_border"
            android:text="7"
            android:textColor="@color/btn_orange"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button_8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:backgroundTint="@color/white"
            android:foreground="@drawable/button_border"
            android:text="8"
            android:textColor="@color/btn_orange"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button_9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:backgroundTint="@color/white"
            android:foreground="@drawable/button_border"
            android:text="9"
            android:textColor="@color/btn_orange"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button_minus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:backgroundTint="@color/white"
            android:foreground="@drawable/button_border"
            android:text="-"
            android:textColor="@color/btn_orange"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button_div"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:backgroundTint="@color/white"
            android:foreground="@drawable/button_border"
            android:text="÷"
            android:textColor="@color/btn_orange"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.05"
        android:layout_marginStart="2sp"
        android:layout_marginEnd="2sp"
        android:layout_marginBottom="2sp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button_mc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:backgroundTint="@color/white"
            android:foreground="@drawable/button_border"
            android:text="MC"
            android:textColor="@color/btn_orange"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_mr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:backgroundTint="@color/white"
            android:foreground="@drawable/button_border"
            android:text="MR"
            android:textColor="@color/btn_orange"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_ms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:backgroundTint="@color/white"
            android:foreground="@drawable/button_border"
            android:text="MS"
            android:textColor="@color/btn_orange"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_mplus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:backgroundTint="@color/white"
            android:foreground="@drawable/button_border"
            android:text="M+"
            android:textColor="@color/btn_orange"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_mminus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:backgroundTint="@color/white"
            android:foreground="@drawable/button_border"
            android:text="M-"
            android:textColor="@color/btn_orange"
            android:textSize="20sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>